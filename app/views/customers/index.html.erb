                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group">
                    <label for="email_account">Email</label>
                    <input type="text" class="form-control" id="email_account" name="email_account" value="<%= current_user['_source']['info']['email_account'] %>">
                  </div>
                </div>
                <div class="col-sm-12 text-center">
                  <div class="form-group">
                    <% flash.each do |key, value| %>
                        <div class="alert alert-<%= key %>"><%= value %></div>
                    <% end %>
                  </div>
                </div>
                <div class="col-sm-12 text-center">
